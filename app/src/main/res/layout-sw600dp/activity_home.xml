<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backs"

    android:screenOrientation="portrait">


    <android.support.constraint.Guideline

        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.059" />

    <android.support.constraint.Guideline

        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.09" />

    <android.support.constraint.Guideline

        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.76" />

    <android.support.constraint.Guideline

        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.74" />

    <android.support.constraint.Guideline

        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline

        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.97" />

    <android.support.constraint.Guideline

        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="1.0" />

    <android.support.constraint.Guideline
        android:id="@+id/HorizontalGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintGuide_begin="35dp" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontalGuide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"

        />

    <android.support.constraint.Guideline
        android:id="@+id/HorizontalGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.76" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontalGuide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.86" />

    <LinearLayout
        android:id="@+id/imagelayout33"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/horizontalGuide3"
        app:layout_constraintStart_toStartOf="@+id/HorizontalGuide2"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <ImageView
            android:id="@+id/questionImgView"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:backgroundTint="#00D34A4A"
            android:elevation="0dp"
            app:srcCompat="@drawable/greenquestionmark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        app:layout_constraintEnd_toStartOf="@+id/horizontalGuide3"
        app:layout_constraintStart_toStartOf="@id/horizontalGuide4"
        app:layout_constraintTop_toTopOf="@+id/guideline6">

        <LinearLayout
            android:id="@+id/MedicalN_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMedN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/cairo_bold"
                android:includeFontPadding="false"
                android:textColor="#EC1515"
                android:textSize="@dimen/texxxt300" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/cairo_bold"
                android:text="تسجيل الدخول"
                android:textColor="#000"
                android:textSize="@dimen/texxxt300" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMedN2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/cairo"
                android:includeFontPadding="false"
                android:textColor="#EC1515"
                android:textSize="@dimen/texxxt300"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/cairo_bold"
                android:text="تسجيل خروج"
                android:textColor="#000"
                android:textSize="@dimen/texxxt300" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        app:columnCount="4"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@id/horizontalGuide3"
        app:layout_constraintStart_toStartOf="@+id/HorizontalGuide1"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:orientation="horizontal"
        app:rowCount="1">

        <android.support.v7.widget.CardView
            android:id="@+id/Sonar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_column="1"
            app:layout_columnWeight="0.25"
            app:layout_gravity="center|fill"
            app:layout_row="0"
            app:layout_rowWeight="0.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_columnWeight="0.25"
                app:layout_rowWeight="0.25">

                <ImageView
                    android:layout_width="@dimen/imgwidth"
                    android:layout_height="@dimen/imgheight"
                    app:srcCompat="@drawable/radiologyicon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/cairo"
                    android:gravity="center"
                    android:text="نتائج الأشعة"
                    android:textColor="#009780"
                    android:textSize="@dimen/texxxt300"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dwldBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_column="0"
            app:layout_columnWeight="0.25"
            app:layout_gravity="center|fill"
            app:layout_row="0"
            app:layout_rowWeight="0.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_columnWeight="0.25"
                app:layout_rowWeight="0.25">

                <ImageView
                    android:layout_width="@dimen/imgwidth"
                    android:layout_height="@dimen/imgheight"
                    app:srcCompat="@drawable/labicon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/cairo"
                    android:gravity="center"
                    android:text="نتائج التحاليل"
                    android:textColor="#009780"
                    android:textSize="@dimen/texxxt300"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_column="3"
            app:layout_columnWeight="0.25"
            app:layout_gravity="center|fill"
            app:layout_row="0"
            app:layout_rowWeight="0.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_columnWeight="0.25"
                app:layout_rowWeight="0.25">

                <ImageView
                    android:layout_width="@dimen/imgwidth"
                    android:layout_height="@dimen/imgheight"
                    app:srcCompat="@drawable/contacticon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/cairo"
                    android:gravity="center"
                    android:text="تواصل معنا"
                    android:textColor="#009780"
                    android:textSize="@dimen/texxxt300"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/TrueBeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_column="2"
            app:layout_columnWeight="0.25"
            app:layout_gravity="center|fill"
            app:layout_row="0"
            app:layout_rowWeight="0.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_columnWeight="0.25"
                app:layout_rowWeight="0.25">

                <ImageView
                    android:layout_width="@dimen/imgwidth"
                    android:layout_height="@dimen/imgheight"
                    app:srcCompat="@drawable/tumoricon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/cairo"
                    android:gravity="center"
                    android:text="نتائج الأورام"
                    android:textColor="#009780"
                    android:textSize="@dimen/texxxt300"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>